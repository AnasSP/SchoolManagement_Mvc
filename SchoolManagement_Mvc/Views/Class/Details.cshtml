@model SchoolManagement.Models.Class

@{
ViewData["Title"] = "Class Details";
}

<div class="container">
    <h2>Class Details</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h4>Class Information</h4>
            <dl class="row">
                <dt class="col-sm-4">Class Name</dt>
                <dd class="col-sm-8">@Model.ClassName</dd>

                <dt class="col-sm-4">Grade</dt>
                <dd class="col-sm-8">@Model.Grade?.GradeName</dd>

                <dt class="col-sm-4">Session</dt>
                <dd class="col-sm-8">@Model.Session?.SessionName</dd>
            </dl>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h4>Students in this Class</h4>
            @if (Model.Students != null && Model.Students.Any())
            {
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Registration Date</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var student in Model.Students)
                {
                <tr>
                    <td>@student.StudentFirstName</td>
                    <td>@student.StudentLastName</td>
                    <td>@student.StudentDateOfBirth.ToShortDateString()</td>
                    <td>@student.StudentRegistrationDate.ToShortDateString()</td>
                </tr>
                }
                </tbody>
            </table>
            }
            else
            {
            <p>No students are enrolled in this class.</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
