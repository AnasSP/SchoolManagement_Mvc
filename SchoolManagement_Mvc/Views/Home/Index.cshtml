@{
ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #007bff;
            color: white;
            padding: 15px 20px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .sidebar {
            background-color: #343a40;
            color: white;
            width: 250px;
            height: 100vh;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
        }

        .sidebar h2 {
            font-size: 1.2rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            margin: 5px 0;
            border-radius: 5px;
        }

        .sidebar a:hover {
            background-color: #007bff;
        }

        .dashboard-content {
            margin-left: 250px; /* Offset for sidebar */
            padding: 20px;
        }

        .dashboard-content h1 {
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .dashboard-cards {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

        .dashboard-card {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            flex: 1 1 calc(25% - 20px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .dashboard-card h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .dashboard-card p {
            font-size: 1.2rem;
            color: #6c757d;
        }
    </style>
</head>
<body>


<!-- Sidebar -->
@* <div class="sidebar"> *@
@*     <h2>ADMIN</h2> *@
@*     <a href="#">Home</a> *@
@*     <a asp-controller="Class" asp-action="Index">Class</a> *@
@*     <a asp-controller="Subject" asp-action="Index">Subjects</a> *@
@*     <a asp-controller="Teacher" asp-action="Index">Teachers</a> *@
@*     <a asp-controller="Student" asp-action="Index">Students</a> *@
@*     <a asp-controller="Exam" asp-action="Index">Examination</a> *@
@*     <a asp-controller="Attendance" asp-action="Index">Attendance</a> *@
@*     <a href="#">Logout</a> *@
@* </div> *@

<!-- Dashboard Content -->
<div class="dashboard-content">
    <h1>Dashboard</h1>
    <div class="dashboard-cards">
        <!-- Total Students Card -->
        <div class="dashboard-card">
            <h3>Total Students</h3>
            <p>@ViewBag.TotalStudents</p>
        </div>

        <!-- Total Teachers Card -->
        <div class="dashboard-card">
            <h3>Total Teachers</h3>
            <p>@ViewBag.TotalTeachers</p>
        </div>

        <!-- Total Class Card -->
        <div class="dashboard-card">
            <h3>Total Class</h3>
            <p>@ViewBag.TotalClasses</p>
        </div>

        <!-- Total Subjects Card -->
        <div class="dashboard-card">
            <h3>Total Subjects</h3>
            <p>@ViewBag.TotalSubjects</p>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>