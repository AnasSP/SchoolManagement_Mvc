@model SchoolManagement.Models.Enroll

@{
    ViewData["Title"] = "Add Grade";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Add Grade</h2>
        </div>
    </div>
    <form method="post" asp-action="AddGrade">
        <div class="border p-3 mt-4">
            <!-- Hidden field for StudentId -->
            <input type="hidden" asp-for="StudentId" />

            <!-- SubjectId -->
            <div class="mb-3 row p-1">
                <label asp-for="SubjectId" class="p-0"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects">
                    <option value="">-- Select Subject --</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>

            <!-- GradeValue -->
            <div class="mb-3 row p-1">
                <label asp-for="GradeValue" class="p-0"></label>
                <input asp-for="GradeValue" type="number" class="form-control" min="0" max="20" step="0.1" />
                <span asp-validation-for="GradeValue" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Add Grade</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Student" asp-action="Index" class="btn btn-outline-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Check if TempData["success"] contains a message and display it as an alert
        @if (TempData["success"] != null)
        {
            <text>
                alert('@TempData["success"]');
            </text>
        }

        // Check if TempData["error"] contains a message and display it as an alert
        @if (TempData["error"] != null)
        {
            <text>
                alert('Error: @TempData["error"]');
            </text>
        }
    </script>
}