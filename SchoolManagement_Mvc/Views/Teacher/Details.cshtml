@model SchoolManagement.Models.Teacher

@{
    ViewData["Title"] = "Teacher Details";
}

<div class="container">
    <h2>Teacher Details</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h4>Basic Information</h4>
            <dl class="row">
                <dt class="col-sm-4">First Name</dt>
                <dd class="col-sm-8">@Model.TeacherFirstName</dd>

                <dt class="col-sm-4">Last Name</dt>
                <dd class="col-sm-8">@Model.TeacherLastName</dd>

                <dt class="col-sm-4">Date of Birth</dt>
                <dd class="col-sm-8">@Model.TeacherDateOfBirth.ToShortDateString()</dd>

                <dt class="col-sm-4">Registration Date</dt>
                <dd class="col-sm-8">@Model.TeacherRegistrationDate.ToShortDateString()</dd>

                <dt class="col-sm-4">Teacher Key ID</dt>
                <dd class="col-sm-8">@Model.TeacherKeyId</dd>
            </dl>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h4>Assigned Subjects</h4>
            @if (Model.TeacherSubjects != null && Model.TeacherSubjects.Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Subject Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacherSubject in Model.TeacherSubjects)
                        {
                            <tr>
                                <td>@teacherSubject.Subject.SubjectName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No subjects assigned to this teacher.</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="AssignSubject" asp-route-teacherId="@Model.TeacherId" class="btn btn-primary">Assign Subject</a>
    </div>
</div>